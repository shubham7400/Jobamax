<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_white_box"
        android:padding="10dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_bg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/rounded_bottom_purple_top_blue_10"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_archive"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_archive_white" />

            <TextView
                android:id="@+id/tv_archive_title"
                style="@style/title_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="archive"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/cl_most_parent"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_company_logo"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10dp"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/ovel_white_box_gradient_border"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_company_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_company_gradient"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cl_company_logo"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_company_name"
                            style="@style/title_bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Starbucks"
                            android:paddingHorizontal="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/cb_like"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_like"
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:background="@drawable/selector_heart_checkbox_gradient"
                            android:button="@android:color/transparent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                     </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_job_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Développeur"
                        android:paddingHorizontal="10dp"
                        android:textSize="15sp"
                        style="@style/title_bold"/>
                    <TextView
                        android:id="@+id/tv_job_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stage"
                        android:paddingHorizontal="10dp"
                        android:textSize="15sp"
                        style="@style/title_regular"/>
                    <TextView
                        android:id="@+id/tv_job_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paris"
                        android:paddingHorizontal="10dp"
                        android:textSize="15sp"
                        style="@style/title_regular"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_in_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:text="En cours"
                    android:textSize="15sp"
                    android:layout_marginEnd="10dp"
                    android:paddingHorizontal="20dp"
                    style="@style/button_gradient_rect50"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Postuler"
                    android:textSize="15sp"
                    android:layout_marginEnd="10dp"
                    android:paddingHorizontal="20dp"
                    style="@style/button_gradient_rect50"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_apply_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="As-tu postulé ?"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/rounded_white_box_gradient_border_50"
                    android:paddingHorizontal="20dp"
                    style="@style/button_gradient_rect50"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>