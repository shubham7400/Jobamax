<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".recruiter.message.RecruiterChatListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_page_title"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mes Recrutements"
            android:textSize="25sp"
            style="@style/title_bold"/>

        <ImageView
            android:id="@+id/iv_seeker_folder"
            android:layout_margin="15dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_add_gradient"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/v_devider"
            app:layout_constraintTop_toBottomOf="@+id/tv_page_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/v_divider"/>

        <com.jobamax.appjobamax.customview.CustomSpinner
            android:id="@+id/sp_qualifying_step"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/v_devider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:popupBackground="@drawable/rounded_white_box_gradient_border_10"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_white_box_gradient_border_10"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_sort_by"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/sp_qualifying_step"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_edit_role"
                android:drawableEnd="@drawable/ic_edit_underline_gradient"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:drawablePadding="10dp"
                style="@style/title_bold"
                android:textSize="20sp"
                android:text="UX/UI Designer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_sort_by"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Trier par"
                android:paddingBottom="0dp"
                style="@style/title_regular"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                app:layout_constraintStart_toStartOf="@+id/tv_sort_by"
                app:layout_constraintEnd_toEndOf="@+id/tv_sort_by"
                app:layout_constraintTop_toBottomOf="@+id/tv_sort_by"
                android:layout_width="0dp"
                android:background="@color/new_purple"
                android:layout_height="1dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_select_seeker_hint"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_sort_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Veuillez sÃ©lectionner Chercheurs d'emploi"
            style="@style/title_regular"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chat_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="50dp"
            android:paddingTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_select_seeker_hint"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>