<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.LoginRegistrationOptionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:background="@drawable/background_gradient_bottom_purple_top_blue"
        android:isScrollContainer="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="80dp"
                android:src="@drawable/jobamax_logo_white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_linked_in_login"
                style="@style/button_rounded_white_blue_border"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/layer_list_linked_in"
                android:paddingHorizontal="10dp"
                android:text="CONTINUER AVEC LINKEDIN" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_google_login"
                android:layout_marginBottom="40dp"
                style="@style/button_rounded_white_blue_border"
                android:drawableStart="@drawable/logo_gmail"
                android:paddingHorizontal="10dp"
                android:text="CONTINUER AVEC GMAIL" />

            <LinearLayout
                android:layout_marginVertical="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_weight="0.50"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="OU"
                    style="@style/title_regular"
                    android:textSize="16sp"
                    android:paddingHorizontal="20dp"/>
                <View
                    android:layout_weight="0.50"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_create_account"
                style="@style/button_rounded_white_blue_border"
                android:background="@drawable/rounded_white_border_50"
                android:textColor="@color/white"
                android:text="CRÃ‰ER MON COMPTE"
                android:layout_marginBottom="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_connect_me"
                style="@style/button_rounded_white_blue_border"
                android:background="@drawable/rounded_white_border_50"
                android:textColor="@color/white"
                android:text="ME CONNECTER" />

        </LinearLayout>

    </ScrollView>

</layout>