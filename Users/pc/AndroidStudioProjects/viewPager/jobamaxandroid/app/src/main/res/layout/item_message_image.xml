<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_message_image"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_message_image_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:padding="2dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_message_image"
                    android:layout_width="250dp"
                    android:layout_height="300dp"
                    android:theme="@style/shapableImageView3"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_message_seen_flag"
                android:visibility="gone"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/ll_message_image_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/title_regular"
                android:text="seen"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</layout>