<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ovel_white_box_gradient_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="3dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_user_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bottom_purple_top_blue_50"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="70%"
            android:textColor="@color/white"
            android:layout_marginTop="-15dp"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout20"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout20"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout20" />

        <TextView
            android:id="@+id/tv_recruitment_seeker_name"
            style="@style/title_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="ElÃ©onore Testas"
            app:layout_constraintEnd_toStartOf="@+id/tv_sort_btn"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout20"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_post_name"
            style="@style/title_regular"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            android:text="Developper IOS"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout20"
            app:layout_constraintTop_toBottomOf="@+id/tv_recruitment_seeker_name" />

        <TextView
            android:id="@+id/tv_university_name"
            style="@style/title_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_education"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Science Po"
            android:textSize="16sp"
            android:theme="@style/theme_blue"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout20"
            app:layout_constraintTop_toBottomOf="@+id/tv_post_name" />

        <ImageView
            android:id="@+id/iv_chat"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/message_icon_simple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sort_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_white_box_gradient_border_50"
            android:paddingHorizontal="10dp"
            android:text="Trier"
            app:layout_constraintEnd_toStartOf="@+id/iv_chat"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:transformPivotX="240dp"
            android:transformPivotY="1dp"
            android:progressTint="@color/new_purple"
            android:progressBackgroundTint="@color/new_purple_trans"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_university_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/v_divider"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>