<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".recruiter.profile.setting.RecruiterNewsLatterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_background"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_back_button"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_margin="8sp"
                    android:src="@drawable/back_arrow_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorPrimary" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_toolbar_title"
                    style="@style/screen_title"
                    android:text="@string/newsletter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_white_box">


                <TextView
                    style="@style/title_regular"
                    android:paddingStart="16dp"
                    android:paddingEnd="100dp"
                    android:text="@string/newsletter"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_news_latter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:thumb="@drawable/selector_switch_thumb"
                    app:track="@drawable/selector_switch_track" />

            </RelativeLayout>
            <TextView
                style="@style/title_regular"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="En désactivant les notifications, tu ne seras pas informé.e des nouveautés de l'appli, des mises à jour et de nos offres."
                android:textSize="16sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </LinearLayout>

</layout>