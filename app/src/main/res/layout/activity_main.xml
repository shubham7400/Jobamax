<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_get_started"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36sp"
            android:layout_marginTop="68sp"
            android:src="@drawable/logo_jobamax_blue"
            app:layout_constraintBottom_toTopOf="@+id/btn_get_started_slider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <Button
            android:id="@+id/btn_get_started_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36sp"
            android:layout_marginBottom="68dp"
            android:elevation="6dp"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/get_started"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            app:text_style="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>