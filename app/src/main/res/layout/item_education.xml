<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="0dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ll_action_button"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="University of Denver" />

            <TextView
                android:id="@+id/tv_program_label"
                style="@style/regular_label"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:textSize="14sp"
                tools:text="BBA" />

            <TextView
                android:id="@+id/tv_time_label"
                style="@style/regular_label"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                tools:text="07/20 - 07/21" />

            <TextView
                android:id="@+id/tv_gpa"
                style="@style/regular_label"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:textSize="14sp"
                tools:text="GPA: 3.22" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp">


            <ImageView
                android:id="@+id/iv_edit_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_round_edit" />

            <ImageView
                android:id="@+id/iv_delete_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_round_delete" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/white" />
</LinearLayout>