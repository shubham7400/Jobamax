<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_back_button"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_margin="8sp"
                    android:src="@drawable/back_arrow_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_toolbar_title"
                    android:layout_width="wrap_content"
                    style="@style/screen_title"
                    android:text="@string/my_personal_information"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/appBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/title_bold"
                        android:layout_marginBottom="5dp"
                        android:text="PrÃ©nom*" />
                    <EditText
                        android:id="@+id/firstNameField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingHorizontal="5dp"
                        style="@style/title_regular"
                        android:background="@drawable/rounded_white_box_sad_white_strok"
                        android:inputType="textCapWords" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/title_bold"
                        android:layout_marginBottom="5dp"
                        android:text="Nom de famille" />
                    <EditText
                        android:id="@+id/lastNameField"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingHorizontal="5dp"
                        style="@style/title_regular"
                        android:background="@drawable/rounded_white_box_sad_white_strok"
                        android:inputType="textCapWords" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    style="@style/title_bold"
                    android:text="Genre" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_white_box_sad_white_strok">

                    <TextView
                        android:id="@+id/tv_gender_label"
                        style="@style/title_regular"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:padding="5dp" />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ccp_ic_arrow_drop_down"
                        app:tint="@color/dark_divider" />
                </RelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/title_bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginBottom="5dp"
                        android:text="Age*" />
                    <EditText
                        android:id="@+id/et_age"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="number"
                        style="@style/title_regular"
                        android:background="@drawable/rounded_white_box_sad_white_strok"
                        android:paddingHorizontal="5dp"
                        android:gravity="center_vertical" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <TextView
                    android:layout_marginTop="20dp"
                    style="@style/title_bold"
                    android:layout_marginBottom="5dp"
                    android:text="@string/email_asterisk" />


                <EditText
                    android:id="@+id/et_email_field"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:background="@drawable/rounded_white_box_sad_white_strok"
                    android:paddingHorizontal="5dp"
                    style="@style/title_regular" />




                <Button
                    android:id="@+id/btn_save"
                    style="@style/button_gradient_rect32"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="72dp"
                    android:text="Sauvegarder" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>