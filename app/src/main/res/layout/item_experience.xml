<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="0dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ll_action_button"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jobLabel"
                style="@style/regular_label"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="Job title" />

            <TextView
                android:id="@+id/companyLabel"
                style="@style/regular_label"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:textSize="14sp"
                tools:text="Company name" />

            <TextView
                android:id="@+id/locationLabel"
                style="@style/regular_label"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:textSize="14sp"
                tools:text="Location" />

            <TextView
                android:id="@+id/timeLabel"
                style="@style/regular_label"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                tools:text="19/10/2021-19/10/2021" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/editButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_round_edit" />

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_round_delete" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/white" />
</LinearLayout>