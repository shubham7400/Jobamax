<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="event"
            type="com.findajob.jobamax.model.Event" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4sp"
        android:backgroundTint="#f2f2f1"
        app:cardCornerRadius="6sp"
        app:cardElevation="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlDate"
                android:layout_width="80sp"
                android:layout_height="0sp"
                android:background="@drawable/bg_gradient"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12sp"
                    android:layout_marginVertical="20sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:layout_marginStart="12sp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@{event.name}"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/rlDate"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvEventOrganiser"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:layout_marginStart="12sp"
                android:ellipsize="middle"
                android:text="@{event.organiser.getString(`firstName`)}"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/rlDate"
                app:layout_constraintTop_toBottomOf="@id/tvEventName" />

            <TextView
                android:id="@+id/rvTime"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:layout_marginStart="12sp"
                android:text="@{event.date.toLocaleString()}"
                android:textColor="#ff2222"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/rlDate"
                app:layout_constraintTop_toBottomOf="@id/tvEventOrganiser" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
