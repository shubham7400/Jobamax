<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="handler"
            type="com.findajob.jobamax.dashboard.messages.ChatHandler" />

        <variable
            name="profilePictureUrl"
            type="String" />

        <variable
            name="vm"
            type="com.findajob.jobamax.dashboard.messages.ChatViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="52sp"
            android:background="@drawable/bg_gradient"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay.Dark">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivBackButton"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:onClick="@{()->handler.onBackPress()}"
                        android:src="@drawable/ic_arrow_back"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/cvUserImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvUserImage"
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:layout_marginStart="10dp"
                        android:elevation="0sp"
                        app:cardCornerRadius="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvUsername"
                        app:layout_constraintStart_toEndOf="@id/ivBackButton"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ivUserImage"
                            loadImageFromUrlCircular="@{profilePictureUrl}"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tvUsername"
                            app:layout_constraintStart_toEndOf="@id/ivBackButton"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@{vm.name}"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cvUserImage"
                        app:layout_constraintTop_toTopOf="parent" />




                    <ImageView
                        android:id="@+id/ivCallButton"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginEnd="12.5sp"
                        android:onClick="@{()->handler.onCallButtonPressed()}"
                        android:src="@drawable/ic_phone_call"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivVideoButton"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivVideoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginEnd="16sp"
                        android:onClick="@{()->handler.onVideoCallButtonPressed()}"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_video_call"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/iv_requirement_open_button"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_requirement_open_button"
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginEnd="16sp"
                        android:onClick="@{()->handler.onRequirementsButtonPressed()}"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_requirements"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.github.loadingview.LoadingView
                android:id="@+id/loading"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:lv_end_color="@color/colorAccent"
                app:lv_start_color="@color/trans_purple" />

            <!-- messages -->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chat_rv_message"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="12sp"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/rlBottomSendPart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:reverseLayout="true"
                tools:itemCount="2"
                tools:listitem="@layout/item_chat_sender" />

            <!-- templates -->
            <LinearLayout
                android:id="@+id/chat_ll_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:visibility="@{vm.form.showTemplate}"
                app:layout_constraintBottom_toTopOf="@+id/rlBottomSendPart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="@{() -> vm.setInputTemplate(0)}"
                    android:text="Hello! Nice to meet you!"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="@{() -> vm.setInputTemplate(1)}"
                    android:text="When are you free for a call?"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="@{() -> vm.setInputTemplate(2)}"
                    android:text="Good day! How are you doing?"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rlBottomSendPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/chat_b_image"
                    android:layout_width="wrap_content"
                    android:layout_height="16sp"
                    android:layout_marginHorizontal="2sp"
                    android:contentDescription="@string/send"
                    android:onClick="@{() -> vm.setSelectImage(true)}"
                    android:src="@drawable/ic_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/chat_et_message"
                    app:layout_constraintStart_toEndOf="@+id/chat_b_camera"
                    app:layout_constraintTop_toTopOf="parent"
                    android:tint="@color/colorAccent" />


                <ImageView
                    android:id="@+id/chat_b_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="16sp"
                    android:layout_marginHorizontal="2sp"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="@string/send"
                    android:onClick="@{() -> handler.launchCamera()}"
                    android:src="@drawable/ic_camera"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/chat_b_image"
                    app:layout_constraintStart_toEndOf="@+id/chat_b_file"
                    app:layout_constraintTop_toTopOf="parent"
                    android:tint="@color/colorAccent" />

                <ImageView
                    android:id="@+id/chat_b_file"
                    android:layout_width="wrap_content"
                    android:layout_height="16sp"
                    android:layout_marginHorizontal="2sp"
                    android:contentDescription="@string/send"
                    android:onClick="@{() -> vm.setSelectFiles(true)}"
                    android:src="@drawable/ic_add_file"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/chat_b_camera"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:tint="@color/colorAccent" />

                <EditText
                    android:id="@+id/chat_et_message"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:backgroundTint="#f2f2f2"
                    android:hint="@string/label_enter_message"
                    android:inputType="textImeMultiLine"
                    android:minHeight="38sp"
                    android:onTextChanged="@{(text,start,before,count) -> vm.onMessageChange(text)}"
                    android:paddingHorizontal="12.5dp"
                    android:paddingVertical="4sp"
                    android:text="@{vm.form.message}"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="17sp"
                    app:flow_maxElementsWrap="30"
                    app:flow_wrapMode="chain"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/chat_b_message"
                    app:layout_constraintStart_toEndOf="@id/chat_b_image"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/chat_b_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8sp"
                    android:layout_marginEnd="8sp"
                    app:cardBackgroundColor="@{vm.form.messageValid ? @color/greyishWhite : @color/white}"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="0sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/chat_et_message"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_gravity="center"
                            android:layout_margin="8sp"
                            android:contentDescription="@string/send"
                            android:enabled="@{vm.form.messageValid}"
                            android:onClick="@{() -> handler.onSendMessage()}"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_send"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:tint="@{vm.form.messageValid? @color/com_facebook_messenger_blue : @color/grey}" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>