<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/rounded_white_box"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/close_black"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Ajouter"
            style="@style/title_bold"/>

        <com.jobamax.appjobamax.customview.CustomSpinner
            android:id="@+id/sp_qualifying_step"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:popupBackground="@drawable/rounded_white_box_gradient_border_10"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_white_box_gradient_border_10"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sort"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sp_qualifying_step"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingHorizontal="40dp"
            android:text="Trier"
            style="@style/button_gradient_rect50"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>