<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.findajob.jobamax.data.pojo.Message" />

        <variable
            name="parseUser"
            type="com.parse.ParseUser" />

        <variable
            name="recieverName"
            type="String" />
    </data>


    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/slMessageSwipe"
        android:layout_width="match_parent"
        android:layout_height="72sp"
        android:layout_marginHorizontal="16sp"
        app:leftEdgeSwipeOffset="0sp"
        app:rightEdgeSwipeOffset="0sp">

        <LinearLayout
            android:id="@+id/bottom_wraper"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">


            <ImageView
                android:id="@+id/ivUnarchive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/com_facebook_blue"
                android:contentDescription="@string/unarchive"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_unarchive"
                app:tint="@color/white" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom_wrapper1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/btnLocation"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:src="@android:drawable/ic_menu_info_details" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMessageBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent">


            <!-- Profile picture of the user -->
            <androidx.cardview.widget.CardView
                android:id="@+id/item_messages_iv_avatar"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_marginVertical="12sp"
                app:cardCornerRadius="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    loadImageFromUrlCircular="@{parseUser.getCurrentUser().username.equals(item.getParseObject(`receiverId`).get(`username`).toString())? item.getParseObject(`senderId`).get(`profilePicUrl`).toString() : item.getParseObject(`receiverId`).get(`profilePicUrl`).toString()}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/avatars" />

            </androidx.cardview.widget.CardView>

            <!-- Name of the user -->
            <TextView
                android:id="@+id/item_messages_iv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:maxLines="1"
                android:text="@{recieverName}"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/item_messages_iv_message"
                app:layout_constraintStart_toEndOf="@+id/item_messages_iv_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Lorem"
                tools:textColor="@color/black" />

            <!--            android:text="@{item.getParseObject(`receiverId`).get(`username`).toString()}"-->
            <!--        android:text="@{parseUser.getCurrentUser().username.equals(item.getParseObject(`receiverId`).get(`username`).toString())? item.getParseObject(`senderId`).get(`username`).toString() : item.getParseObject(`receiverId`).get(`username`).toString()}"-->

            <ImageView
                android:layout_width="16sp"
                android:layout_height="16sp"
                android:layout_marginStart="8sp"
                android:scaleType="centerInside"
                android:src="@{item.isSource ? @drawable/ic_top_arrow : @drawable/ic_messages, default=@drawable/ic_top_arrow}"
                app:layout_constraintBottom_toBottomOf="@id/item_messages_iv_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toEndOf="@+id/item_messages_iv_name"
                app:layout_constraintTop_toTopOf="@id/item_messages_iv_name"
                app:tint="@color/purple" />

            <!-- Message of the user -->
            <TextView
                android:id="@+id/item_messages_iv_message"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{item.getParseObject(`message`).get(`message`).toString()}"
                android:textColor="@color/grey"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_messages_iv_avatar"
                app:layout_constraintTop_toBottomOf="@+id/item_messages_iv_name"
                tools:text="Lorem Espum Lorem Espum" />

            <ImageView
                android:id="@+id/iv_seen_indicator"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:layout_marginEnd="30sp"
                android:src="@drawable/ic_unread_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/purple" />

            <!-- Horizontal line down below -->
            <View
                android:id="@+id/vHorizontalLine"
                android:layout_width="0sp"
                android:layout_height="0.2dp"
                android:layout_marginEnd="16sp"
                android:background="@color/transGrey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/item_messages_iv_message" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.daimajia.swipe.SwipeLayout>
</layout>