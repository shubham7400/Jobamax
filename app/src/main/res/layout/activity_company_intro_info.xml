<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.findajob.jobamax.recruiter.profile.account.companyInfo.CompanyIntroInfoHandler" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F7"
        tools:context=".recruiter.profile.account.companyInfo.CompanyIntroInfoActivity">

        <!-- App bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_action_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@id/sv_main_body">

            <ImageView
                android:id="@+id/iv_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:contentDescription="@string/go_back"
                android:onClick="@{()-> handler.onBackClicked()}"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_information"
                android:textColor="#0975FE"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_back_button"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/sv_main_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_action_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- company name -->
                <TextView
                    android:id="@+id/tv_company_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/company_name_asterisk"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/et_company_name_field"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_company_name_field"
                    android:layout_width="170sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:autofillHints="name"
                    android:background="@drawable/bg_sligthly_rounded_edit_text"
                    android:hint="@string/company_name"
                    android:inputType="textPersonName"
                    android:padding="12sp"
                    android:textColorHint="#757575"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_company_name_label" />

                <!-- position -->
                <TextView
                    android:id="@+id/tv_position_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/position"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/et_position_field"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_position_field"
                    android:layout_width="170sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:autofillHints="postalCode"
                    android:background="@drawable/bg_sligthly_rounded_edit_text"
                    android:hint="@string/company_position"
                    android:inputType="text"
                    android:padding="12sp"
                    android:textColorHint="#757575"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_position_label" />

                <!-- headquarters -->
                <TextView
                    android:id="@+id/tv_headquarters_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/headquarter"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/et_headquarters_field"
                    app:layout_constraintTop_toBottomOf="@id/et_company_name_field" />

                <EditText
                    android:id="@+id/et_headquarters_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:autofillHints="postalAddress"
                    android:background="@drawable/bg_sligthly_rounded_edit_text"
                    android:hint="@string/company_address_hint"
                    android:inputType="textPostalAddress"
                    android:lines="3"
                    android:padding="12sp"
                    android:paddingVertical="12sp"
                    android:textColorHint="#757575"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_headquarters_label" />

                <!-- vat number -->
                <TextView
                    android:id="@+id/tv_vat_number_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:text="@string/vat_number"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/et_vat_number_field"
                    app:layout_constraintTop_toBottomOf="@id/et_headquarters_field" />

                <EditText
                    android:id="@+id/et_vat_number_field"
                    android:layout_width="170sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:autofillHints="vat number"
                    android:background="@drawable/bg_sligthly_rounded_edit_text"
                    android:hint="@string/vat_number_hint"
                    android:inputType="numberDecimal"
                    android:padding="12sp"
                    android:textColorHint="#757575"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_vat_number_label" />

                <!-- company website -->
                <TextView
                    android:id="@+id/tv_comapny_website_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:text="@string/company_website"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/et_company_website_field"
                    app:layout_constraintTop_toBottomOf="@id/et_headquarters_field" />

                <EditText
                    android:id="@+id/et_company_website_field"
                    android:layout_width="170sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:autofillHints="website"
                    android:background="@drawable/bg_sligthly_rounded_edit_text"
                    android:hint="@string/company_address_demo"
                    android:inputType="textWebEmailAddress"
                    android:padding="12sp"
                    android:textColorHint="#757575"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_comapny_website_label" />


                <!-- company size -->
                <TextView
                    android:id="@+id/tv_company_size_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:text="@string/company_size"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/cv_company_size_field"
                    app:layout_constraintTop_toBottomOf="@id/et_company_website_field" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_company_size_field"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/bg_rounded_layout"
                    android:elevation="0sp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_company_size_label">

                    <RadioGroup
                        android:id="@+id/rg_company_size_options"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16sp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rb_1_to_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/one_to_ten" />

                        <RadioButton
                            android:id="@+id/rb_11_to_50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/eleven_to_fifty" />

                        <RadioButton
                            android:id="@+id/rb_51_to_199"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fifty_one_to_one_ninety_nine" />

                        <RadioButton
                            android:id="@+id/rb_200_to_500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/two_to_five_hundred" />

                        <RadioButton
                            android:id="@+id/rb_500_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/five_hundred_plus" />


                    </RadioGroup>

                </androidx.cardview.widget.CardView>


                <!-- save button -->
                <Button
                    android:id="@+id/btnSave"
                    style="@style/primary_button"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="37dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="18sp"
                    android:onClick="@{() -> handler.onSubmitClicked()}"
                    android:text="@string/save"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_company_size_field" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>