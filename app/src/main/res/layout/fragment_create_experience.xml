<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.findajob.jobamax.jobseeker.profile.cv.experience.CreateExperienceHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- App bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_action_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back_button"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_margin="8sp"
                android:contentDescription="@string/go_back"
                android:onClick="@{()-> handler.onBackButtonClicked()}"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/lite_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/experience"
                android:textColor="#0975FE"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F2F2F7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_action_bar">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/job_offer_heading"
                        android:layout_marginTop="24dp"
                        android:text="@string/job_asterick" />

                    <EditText
                        android:id="@+id/jobNameField"
                        style="@style/job_offer_field"
                        android:background="@drawable/bg_sligthly_rounded_edit_text"
                        android:backgroundTint="@color/white"
                        android:hint="@string/enter_job"
                        android:inputType="textCapWords" />

                    <TextView
                        style="@style/job_offer_heading"
                        android:layout_marginTop="24dp"
                        android:text="@string/company" />

                    <EditText
                        android:id="@+id/companyField"
                        style="@style/job_offer_field"
                        android:background="@drawable/bg_sligthly_rounded_edit_text"
                        android:backgroundTint="@color/white"
                        android:hint="@string/enter_company"
                        android:inputType="textCapWords" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            style="@style/job_offer_heading"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:gravity="center_vertical"
                            android:text="@string/location" />


                        <TextView
                            android:id="@+id/tv_location_field"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_weight="0.7"
                            android:ellipsize="middle"
                            android:gravity="center_vertical"
                            android:onClick="@{()->handler.onLocationClicked()}"
                            android:singleLine="true"
                            android:text="@string/click_to_add_location"
                            android:textColor="#0A75FE"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/job_offer_heading"
                                android:text="@string/start_date" />

                            <TextView
                                android:id="@+id/experienceStartDateField"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="16dp"
                                android:gravity="center_vertical"
                                android:onClick="@{(v) -> handler.onDateClicked(v, 1)}"
                                android:text="@string/click_to_add"
                                android:textColor="@color/lite_blue"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/job_offer_heading"
                                android:text="@string/end_date" />

                            <TextView
                                android:id="@+id/experienceEndDateField"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="16dp"
                                android:gravity="center_vertical"
                                android:onClick="@{(v) -> handler.onDateClicked(v, 1)}"
                                android:text="@string/click_to_add"
                                android:textColor="@color/lite_blue"
                                android:textSize="16sp" />

                            <CheckBox
                                android:id="@+id/cb_currently_working"
                                style="@style/job_offer_sub_heading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/currently_working"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        style="@style/job_offer_heading"
                        android:layout_marginTop="24dp"
                        android:text="@string/description" />

                    <EditText
                        android:id="@+id/expDescriptionField"
                        style="@style/job_offer_field"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_sligthly_rounded_edit_text"
                        android:backgroundTint="@color/white"
                        android:gravity="top"
                        android:hint="@string/description"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="100"
                        android:minHeight="120dp"
                        android:padding="12sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button"
                        style="@style/primary_button"
                        android:layout_marginTop="48dp"
                        android:background="@drawable/bg_round_button_blue"
                        android:onClick="@{() -> handler.onSaveButtonClicked()}"
                        android:text="@string/save"
                        android:textSize="18sp" />
                </LinearLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>