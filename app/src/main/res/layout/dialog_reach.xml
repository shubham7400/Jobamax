<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded_dialog"
        android:padding="12.5sp"
        app:layout_anchorGravity="center">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="12.5sp"
            android:contentDescription="@string/jobamax_logo"
            android:src="@drawable/logo_jobamax_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNotificationBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.5sp"
            android:text="@string/it_s_a_match"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:flow_wrapMode="aligned"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo" />

        <TextView
            android:id="@+id/tvBody"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.5sp"
            android:singleLine="false"
            android:text="@string/you_and_company_can_now_discuss_with_each_other"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:flow_wrapMode="aligned"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationBody" />

        <LinearLayout
            android:id="@+id/requirementsContainer"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNotificationBody" />

        <Button
            android:id="@+id/btnNegative"
            android:layout_width="200sp"
            android:layout_height="32sp"
            android:layout_marginHorizontal="12.5sp"
            android:layout_marginTop="8dp"
            android:background="@color/transparent"
            android:text="@string/keep_swiping"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPositive" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPositive"
            android:layout_width="220dp"
            android:layout_height="48sp"
            android:layout_marginHorizontal="12.5sp"
            android:layout_marginBottom="12.5sp"
            android:background="@drawable/bg_round_button_blue"
            android:text="@string/send_message"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBody" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
