    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="jobSeeker"
            type="com.findajob.jobamax.model.JobSeeker" />

        <variable
            name="handler"
            type="com.findajob.jobamax.jobseeker.profile.account.home.JobSeekerAccountInterface" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_background"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_back_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:onClick="@{() -> handler.onBackButtonClicked()}"
                    android:src="@drawable/back_arrow_blue" />

                <TextView
                    style="@style/regular_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toStartOf="@+id/civ_user"
                    android:layout_toEndOf="@+id/iv_back_button"
                    android:gravity="center"
                    android:text="@string/account"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_user"
                    loadImageFromUrl="@{jobSeeker.profilePicUrl}"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="@{() -> handler.onBackButtonClicked()}"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/default_user_img" />
            </RelativeLayout>
        </RelativeLayout>


