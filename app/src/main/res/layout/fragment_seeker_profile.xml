<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".jobseeker.profile.SeekerProfileFragment">

    <data>
        <variable
            name="jobSeeker"
            type="com.findajob.jobamax.model.JobSeeker" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:background="#F5F0FD"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="#F5F0FD"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/white_back_img"
                    app:layout_constraintTop_toTopOf="parent" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/iv_back_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/back_arrow_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/iv_back_button"
                        android:fontFamily="@font/opensans_bold"
                        android:text="My Profile"
                        android:textColor="#7800EF"
                        android:textSize="20dp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_seeker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@{`Hello ` + jobSeeker.firstName}"
                    app:layout_constraintTop_toBottomOf="@+id/imageView11"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:text="Let's find your\ndream job together."
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_seeker_name" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white_box"
                        android:backgroundTint="#C1B5FA"
                        android:paddingStart="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_aaa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="20dp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="This section \n is empty"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_about_me_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_aaa"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/rounded_white_box"
                            android:backgroundTint="#7800EF"
                            android:fontFamily="@font/opensans_regular"
                            android:padding="10dp"
                            android:text="About me"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="-30dp"
                        android:src="@drawable/default_user_img"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:id="@+id/tv_ddd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/opensans_bold"
                            android:text="My ideal job"
                            android:textColor="#7800EF"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@+id/tv_ddd"
                            android:src="@drawable/info_icon" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Explain your career goals and what can you bring to a company"
                        android:textColor="@color/gray"
                        android:textSize="18sp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_weight="0.33"
                            android:background="@drawable/rounded_white_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_calender_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/opensans_regular"
                                android:gravity="center"
                                android:text="Video 0/1"
                                android:textColor="@color/gray"
                                android:textSize="18dp" />
                            <ImageView
                                android:id="@+id/iv_calender"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/video_icon_black" />
                        </RelativeLayout>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="match_parent"/>
                        <RelativeLayout
                            android:layout_weight="0.33"
                            android:background="@drawable/rounded_white_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_calender_titlef"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/opensans_regular"
                                android:gravity="center"
                                android:text="Text 240 Characters"
                                android:textColor="@color/gray"
                                android:textSize="18dp" />

                            <ImageView
                                android:id="@+id/iv_calvender"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/message_icon_black" />
                        </RelativeLayout>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="match_parent"/>
                        <RelativeLayout
                            android:layout_weight="0.33"
                            android:background="@drawable/rounded_white_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_calender_titlex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/opensans_regular"
                                android:gravity="center"
                                android:text="Pictures 1/5"
                                android:textColor="@color/gray"
                                android:textSize="18dp" />

                            <ImageView
                                android:id="@+id/iv_calendxer"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_below="@+id/tv_calender_titlex"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/camera_icon_black" />
                        </RelativeLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/opensans_bold"
                            android:text="My Resume"
                            android:textColor="#7800EF"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/rounded_white_box"
                            android:backgroundTint="#7800EF"
                            android:fontFamily="@font/opensans_regular"
                            android:padding="10dp"
                            android:gravity="center"
                            android:text="Import my\nLinkedin Profile"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_education"
                            android:layout_weight="0.50"
                            android:background="@drawable/rounded_white_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/opensans_bold"
                                android:text="Education"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_margin="30dp"
                                android:src="@drawable/education"
                                app:layout_constraintBottom_toTopOf="@+id/textView8"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView7" />
                            <ImageView
                                android:id="@+id/textView8"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/opensans_bold"
                                android:src="@drawable/edit"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="match_parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_jobs"
                            android:layout_weight="0.50"
                            android:background="@drawable/rounded_white_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/textView77"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/opensans_bold"
                                android:text="Jobs"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_margin="30dp"
                                android:src="@drawable/suitcase"
                                app:layout_constraintBottom_toTopOf="@+id/textView88"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView77" />
                            <ImageView
                                android:id="@+id/textView88"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/opensans_bold"
                                android:src="@drawable/edit"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_volunteering_activities"
                            android:layout_weight="0.50"
                            android:background="@drawable/rounded_white_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/textView76"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/opensans_bold"
                                android:text="Voluntering &amp; activities"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:layout_centerVertical="true"
                                android:layout_margin="30dp"
                                android:src="@drawable/activities"
                                app:layout_constraintBottom_toTopOf="@+id/textView86"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView76" />
                            <ImageView
                                android:id="@+id/textView86"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/opensans_bold"
                                android:src="@drawable/edit"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="match_parent"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_skills"
                            android:layout_weight="0.50"
                            android:background="@drawable/rounded_white_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/textView73"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/opensans_bold"
                                android:text="Skills"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_margin="30dp"
                                android:src="@drawable/skills"
                                app:layout_constraintBottom_toTopOf="@+id/textView83"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView73" />
                            <ImageView
                                android:id="@+id/textView83"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/opensans_bold"
                                android:src="@drawable/edit"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="My Portfolio"
                        android:textColor="#7800EF"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Explain your career goals and what can you bring to a company"
                        android:textColor="@color/gray"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="My ideal workspace"
                        android:textColor="#7800EF"
                        android:textSize="20dp" />

                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:id="@+id/iv_add_ideal_workspace_btn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/add_icon" />

                        <AutoCompleteTextView
                            android:id="@+id/et_ideal_workspace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/iv_add_ideal_workspace_btn"
                            android:background="@drawable/rounded_white_box"
                            android:fontFamily="@font/opensans_regular"
                            android:hint="Enter Skill ..."
                            android:minHeight="30dp"
                            android:paddingStart="10dp"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/cg_ideal_workspace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </com.google.android.material.chip.ChipGroup>


                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</layout>