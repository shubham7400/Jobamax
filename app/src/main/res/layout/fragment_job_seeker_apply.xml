<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<data>
		
		<variable
			name="handler"
			type="com.findajob.jobamax.jobseeker.track.JobSeekerApplyInterface" />
	</data>
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="256dp"
			android:layout_alignParentTop="true"
			android:adjustViewBounds="true"
			android:scaleType="fitXY"
			android:src="@drawable/img_bottom_curve_background" />

		<RelativeLayout
			android:id="@+id/filterLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_marginStart="16dp"
			android:layout_marginTop="16dp"
			android:layout_marginEnd="16dp"
			android:layout_marginBottom="4dp"
			android:background="@drawable/round_4"
			android:backgroundTint="@color/white"
			android:gravity="center_vertical"
			android:onClick="@{() -> handler.onSearchClicked()}"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/keywordLabel"
				style="@style/regular_label"
				android:layout_centerVertical="true"
				android:layout_margin="8dp"
				android:text="@string/what_job_are_you_looking_for" />

			<ImageView
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_alignParentEnd="true"
				android:layout_margin="8dp"
				android:layout_marginEnd="4dp"
				android:src="@drawable/ic_long_arrow_right" />


		</RelativeLayout>
		
		<LinearLayout
			android:id="@+id/footerLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:gravity="center_horizontal"
			android:orientation="horizontal"
			android:visibility="gone"
			android:paddingBottom="8dp">
			
			<com.google.android.material.floatingactionbutton.FloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/rewindButton"
				android:layout_margin="16dp"
				android:elevation="0dp"
				android:onClick="@{() -> handler.onRewindClicked()}"
				android:src="@drawable/ic_rewind"
				app:backgroundTint="@color/white" />
			
			<com.google.android.material.floatingactionbutton.FloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"
				android:id="@+id/rejectButton"
				android:elevation="0dp"
				android:onClick="@{() -> handler.onCancelClicked()}"
				android:src="@drawable/ic_reject"
				app:backgroundTint="@color/white" />
			
			<com.google.android.material.floatingactionbutton.FloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"
				android:id="@+id/chatButton"
				android:elevation="0dp"
				android:onClick="@{() -> handler.onChatClicked()}"
				android:src="@drawable/ic_chat"
				app:backgroundTint="@color/white"
				app:tint="#D214FF" />
			
			<com.google.android.material.floatingactionbutton.FloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"
				android:id="@+id/acceptButton"
				android:elevation="0dp"
				android:onClick="@{() -> handler.onAcceptClicked()}"
				android:src="@drawable/ic_show"
				app:backgroundTint="@color/white" />
		</LinearLayout>
		
		<com.yuyakaido.android.cardstackview.CardStackView
			android:id="@+id/cardStackView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_above="@+id/footerLayout"
			android:layout_below="@+id/filterLayout"
			android:clipToPadding="false"
			android:padding="4dp" />
		
		<ProgressBar
			android:id="@+id/progressBar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:visibility="gone" />
		
		<TextView
			android:id="@+id/noJobFoundLabel"
			style="@style/regular_label"
			android:layout_centerInParent="true"
			android:text="No jobs found matching your filter"
			android:visibility="gone" />
	
	</RelativeLayout>

</layout>