<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/rounded_white_box"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/close_black"/>

        <TextView
            android:id="@+id/tv_spinner_title"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_close"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SÃ©lectionner le dossier"
            style="@style/title_bold"/>

        <com.jobamax.appjobamax.customview.CustomSpinner
            android:id="@+id/sp_job_seeker_folder"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_spinner_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:popupBackground="@drawable/rounded_white_box_gradient_border_10"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_white_box_gradient_border_10"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sp_job_seeker_folder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="5dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingHorizontal="40dp"
                    android:text="CONTINUER"
                    style="@style/button_gradient_rect50"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

     </androidx.constraintlayout.widget.ConstraintLayout>


</layout>