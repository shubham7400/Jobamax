<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_experience_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:id="@+id/rl_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_box"
                android:paddingHorizontal="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginVertical="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ovel_white_box_gradient_border"
                    android:padding="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_company"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        style="@style/circular_image"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginVertical="10dp"
                    android:layout_toEndOf="@+id/cl_iv">

                    <TextView
                        android:id="@+id/tv_job_name"
                        style="@style/title_semi_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Android Developer"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/iv_delete_item"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_arrow_right"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward_navi_blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_delete_item"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_delete_navi_blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_arrow_right" />

                    <TextView
                        android:id="@+id/tv_company_name"
                        style="@style/title_semi_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Applligent Technology"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/iv_delete_item"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_job_name" />

                    <TextView
                        android:id="@+id/tv_date_duration"
                        style="@style/title_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="sept 2021-mars 2022"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@+id/tv_job_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_company_name" />

                    <TextView
                        android:id="@+id/tv_description"
                        style="@style/title_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Développement d’un internet..."
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@+id/tv_date_duration"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_date_duration" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>