<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".recruiter.search.RecruiterAddJobSourcingCriteriaDialogFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_page_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/back_arrow_blue"/>
            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sourcing"
                style="@style/title_bold"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/v_devider"
            app:layout_constraintTop_toBottomOf="@+id/cl_page_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/v_divider"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/v_devider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="50dp"
            android:isScrollContainer="true"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.jobamax.appjobamax.customview.CustomSpinner
                        android:id="@+id/sp_1"
                        android:layout_marginHorizontal="60dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:popupBackground="@drawable/rounded_white_box_gradient_border_10"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_white_box_gradient_border_10"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/sp_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/rounded_white_box">
                        <EditText
                            android:id="@+id/et_title"
                            android:background="@color/transparent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:hint="Tag"
                            style="@style/title_regular"/>
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/ll_1"
                        android:layout_marginHorizontal="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/cv_tag"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginVertical="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_abc"
                        app:layout_constraintTop_toBottomOf="@+id/cv_tag"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_bold"
                        android:text="Vos critères de base"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_1"
                        android:layout_marginHorizontal="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_abc"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_location"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/iv_location_point"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/location_pin_gradient_15_20"
                                    android:theme="@style/theme_blue"/>
                                <TextView
                                    android:id="@+id/tv_location_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    app:layout_constraintStart_toEndOf="@+id/iv_location_point"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:text="Localisation : "
                                    style="@style/title_regular" />
                                <TextView
                                    android:id="@+id/tv_location"
                                    style="@style/title_light"
                                    android:layout_width="0dp"
                                    android:paddingHorizontal="5dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/iv_location_foreword_arrow"
                                    app:layout_constraintStart_toEndOf="@+id/tv_location_title"
                                    app:layout_constraintTop_toTopOf="parent" />
                                <ImageView
                                    android:id="@+id/iv_location_foreword_arrow"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/ic_arrow_forward_navi_blue"
                                    android:theme="@style/theme_blue"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/cl_work_type"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/iv_contract_type"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/ic_bag_gradient"
                                    android:theme="@style/theme_blue"/>
                                <TextView
                                    android:id="@+id/tv_contract_type_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    app:layout_constraintStart_toEndOf="@+id/iv_contract_type"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:text="Type de contrat : "
                                    style="@style/title_regular" />
                                <TextView
                                    android:id="@+id/tv_type_of_work"
                                    style="@style/title_light"
                                    android:layout_width="0dp"
                                    android:paddingHorizontal="5dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/iv_work_type_foreword_arrow"
                                    app:layout_constraintStart_toEndOf="@+id/tv_contract_type_title"
                                    app:layout_constraintTop_toTopOf="parent" />
                                <ImageView
                                    android:id="@+id/iv_work_type_foreword_arrow"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:src="@drawable/ic_arrow_forward_navi_blue"
                                    android:theme="@style/theme_blue"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/ll_2"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/cv_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/title_bold"
                            android:text="Critères de recherche avancée"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/title_regular"
                            android:textSize="16sp"
                            android:text="Jobs effectués par le candidat"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginTop="5dp"
                            android:background="@drawable/rounded_white_box_gradient_border_50"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_job_title"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="5dp"
                                android:hint="Ajouter une job"
                                android:background="@color/transparent"
                                app:layout_constraintEnd_toStartOf="@+id/iv_add_job_title"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/iv_add_job_title"
                                android:layout_marginEnd="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_add_gradient_holo"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/cg_job_title_tags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_3"
                        android:layout_marginHorizontal="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/ll_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/title_regular"
                            android:textSize="16sp"
                            android:text="Universités ciblées :"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginTop="5dp"
                            android:background="@drawable/rounded_white_box_gradient_border_50"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_add_university"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="5dp"
                                android:hint="ajouter une université"
                                android:background="@color/transparent"
                                app:layout_constraintEnd_toStartOf="@+id/iv_add_university"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/iv_add_university"
                                android:layout_marginEnd="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_add_gradient_holo"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/cg_university_tags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_4"
                        android:layout_marginHorizontal="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/ll_3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/title_regular"
                            android:textSize="16sp"
                            android:text="Compétences recherchées :"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginTop="5dp"
                            android:background="@drawable/rounded_white_box_gradient_border_50"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_add_skill"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="5dp"
                                android:hint="ajouter une compétence"
                                android:background="@color/transparent"
                                app:layout_constraintEnd_toStartOf="@+id/iv_add_skill"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/iv_add_skill"
                                android:layout_marginEnd="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_add_gradient_holo"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/cg_skill_tags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_5"
                        android:layout_marginHorizontal="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/ll_4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/title_regular"
                            android:textSize="16sp"
                            android:text="Entreprise(s) recherchée(s) dans le CV :"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginTop="5dp"
                            android:background="@drawable/rounded_white_box_gradient_border_50"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/et_add_company"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="5dp"
                                android:hint="Ajoute une entreprise"
                                android:background="@color/transparent"
                                app:layout_constraintEnd_toStartOf="@+id/iv_add_company"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/iv_add_company"
                                android:layout_marginEnd="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_add_gradient_holo"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/cg_company_tags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_add_sourcing_criteria"
                        app:layout_constraintTop_toBottomOf="@+id/ll_5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginVertical="50dp"
                        android:layout_marginHorizontal="20dp"
                        android:text="VALIDER MES CRITÈRES"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/button_gradient_rect50"/>

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/autocomplete_fragment"
                        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>