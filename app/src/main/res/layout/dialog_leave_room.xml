<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_rounded_dialog"
        android:padding="12.5sp"
        app:layout_anchorGravity="center">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="90sp"
            android:layout_height="30sp"
            android:layout_marginHorizontal="50sp"
            android:layout_marginTop="12.5sp"
            android:src="@drawable/logo_jobamax_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBody"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.5sp"
            android:text="Do you want to leave the networking room?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:singleLine="false"
            app:flow_wrapMode="aligned"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo" />

        <Button
            android:id="@+id/btnNegative"
            android:layout_width="200sp"
            android:layout_height="48dp"
            style="@style/CardView"
            android:layout_marginHorizontal="12.5sp"
            android:layout_marginTop="8dp"
            android:background="@color/transparent"
            android:text="Stay"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPositive" />


        <Button
            android:id="@+id/btnPositive"
            style="@style/CardView"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="12.5sp"
            android:layout_marginBottom="12.5sp"
            android:background="@drawable/bg_button_gradient"
            android:text="Leave quietly"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBody" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
