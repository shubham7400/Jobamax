<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".jobseeker.course.JobSeekerCourseFragment">

        <View
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:background="#0576FE"
            android:backgroundTint="#0576FE"
            android:contentDescription="@string/background"
            android:scaleType="fitXY"
            android:src="@drawable/img_bottom_curve_background"
            app:layout_constraintBottom_toTopOf="@id/viewPager"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab"
            android:layout_width="350sp"
            android:layout_height="36sp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="12.5sp"
            android:background="@drawable/bg_tab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/transparent"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="0sp"
            app:tabMode="fixed"
            app:tabRippleColor="@null"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/grey" />


        <com.findajob.jobamax.util.NonSwipeableViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginTop="12.5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>