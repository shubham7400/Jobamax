<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.findajob.jobamax.dashboard.home.training.masterclass.model.Episode" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_master_video"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/video_cover"
            loadImageFromUrl="@{item.videoThumbnail}"
            android:layout_width="105dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/play_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic__play_white"
            app:layout_constraintBottom_toBottomOf="@+id/video_cover"
            app:layout_constraintEnd_toEndOf="@+id/video_cover"
            app:layout_constraintStart_toStartOf="@+id/video_cover"
            app:layout_constraintTop_toTopOf="@+id/video_cover" />

        <TextView
            android:id="@+id/title"
            style="@style/video_details_title"
            text="@{item.subTitle}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="4"
            app:layout_constraintStart_toEndOf="@+id/video_cover"
            app:layout_constraintTop_toTopOf="@+id/video_cover"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="1. Title name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/duration"
            style="@style/video_details_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/slitly_rounded_black_background"
            android:padding="4dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="3dp"
            android:textColor="@color/white"
            android:text="@{item.duration}"
            android:textSize="10sp"

            app:layout_constraintBottom_toBottomOf="@+id/video_cover"
            app:layout_constraintEnd_toEndOf="@+id/video_cover"
            tools:text="45min" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{item.description}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_cover"
            tools:text="@string/master_class_dummy_description" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_download"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/video_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/video_cover" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>