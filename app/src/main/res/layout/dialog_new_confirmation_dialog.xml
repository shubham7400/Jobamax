<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="40dp"
    android:background="@drawable/bg_rounded_dialog"
    android:orientation="vertical">

    <View
        android:id="@+id/vBackground"
        android:layout_width="0sp"
        android:layout_height="100dp"
        android:layout_margin="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="26dp"
        android:layout_marginVertical="24dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo_jobamax"
        app:layout_constraintBottom_toTopOf="@id/tvNotificationHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/vBackground"
        app:tint="@color/lite_blue" />

    <TextView
        android:id="@+id/tvNotificationHeader"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25sp"
        android:layout_marginTop="20sp"
        android:text="@string/are_you_sure"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvConfirmationMessage"
        app:layout_constraintEnd_toEndOf="@id/vBackground"
        app:layout_constraintStart_toStartOf="@id/vBackground"
        app:layout_constraintTop_toTopOf="@id/vBackground" />

    <TextView
        android:id="@+id/tvConfirmationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25sp"
        android:text="@string/you_want_to_add_a_job"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/vBackground"
        app:layout_constraintEnd_toEndOf="@id/vBackground"
        app:layout_constraintStart_toStartOf="@id/vBackground"
        app:layout_constraintTop_toBottomOf="@id/tvNotificationHeader"
        app:layout_constraintVertical_bias="0" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnYes"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_marginTop="16sp"
        android:layout_marginBottom="24sp"
        android:background="@drawable/bg_button_gradient"
        android:text="@string/yes"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvNo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vBackground" />

    <TextView
        android:id="@+id/tvNo"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_marginTop="16sp"
        android:layout_marginBottom="24sp"
        android:background="@drawable/bg_bordered_rounded_button"
        android:gravity="center"
        android:text="@string/no"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnYes"
        app:layout_constraintTop_toBottomOf="@id/vBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>