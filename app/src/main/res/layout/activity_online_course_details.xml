<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewPagerAdapter"
            type="com.findajob.jobamax.util.ViewPagerAdapter" />

    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinate"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context=".dashboard.home.training.online.courses.onlinecourse.OnlineCourseDetailsActivity">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_background"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingBottom="8dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_bottom_curve_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/appbar"
                        android:layout_width="0dp"
                        android:layout_height="?actionBarSize"
                        android:elevation="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/backBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_arrow_back"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/online_courses"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_banner"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="16dp"
                        app:layout_constraintDimensionRatio="335:150"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/appbar" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/online_course_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_banner"
                        tools:text="@string/course_title_dummy" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/item_online_courses_rv_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:max="5"
                        android:progressTint="@color/colorYellow"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="@+id/online_course_title"
                        app:layout_constraintTop_toBottomOf="@+id/online_course_title"
                        tools:rating="2.5" />

                    <TextView
                        android:id="@+id/item_online_courses_tv_rating"
                        style="@style/regular_heading"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/colorYellow"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/item_online_courses_rv_rating"
                        app:layout_constraintStart_toEndOf="@+id/item_online_courses_rv_rating"
                        app:layout_constraintTop_toTopOf="@id/item_online_courses_rv_rating"
                        tools:text="3.5" />

                    <TextView
                        android:id="@+id/item_online_courses_numberof_rating"
                        style="@style/regular_label_online_course"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/item_online_courses_rv_rating"
                        app:layout_constraintStart_toEndOf="@+id/item_online_courses_tv_rating"
                        app:layout_constraintTop_toTopOf="@id/item_online_courses_rv_rating"
                        tools:text="243 ratings" />

                    <View
                        android:id="@+id/innerLine"
                        android:layout_width="3dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="8dp"
                        android:background="@color/white"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/item_online_courses_numberof_rating"
                        app:layout_constraintStart_toEndOf="@+id/item_online_courses_numberof_rating"
                        app:layout_constraintTop_toTopOf="@+id/item_online_courses_numberof_rating" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="18dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_thumb_up"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/innerLine"
                        app:layout_constraintStart_toEndOf="@+id/innerLine"
                        app:layout_constraintTop_toTopOf="@+id/innerLine" />

                    <TextView
                        android:id="@+id/item_online_courses_tv_percentage"
                        style="@style/regular_label_online_course"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="@+id/imageView"
                        tools:text="94%" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/online_course_instructor_profile_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="@+id/online_course_title"
                        app:layout_constraintTop_toBottomOf="@+id/item_online_courses_rv_rating"
                        tools:src="@drawable/ic_company_profile" />

                    <TextView
                        android:id="@+id/online_course_instructor_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@android:color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/online_course_instructor_profile_image"
                        app:layout_constraintStart_toEndOf="@+id/online_course_instructor_profile_image"
                        app:layout_constraintTop_toTopOf="@+id/online_course_instructor_profile_image"
                        tools:text="@string/insructor_name" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/enroll_for_tv"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="36dp"
                        android:layout_marginTop="43dp"
                        android:background="@drawable/btn_gradient_rounded"
                        android:elevation="0dp"
                        android:paddingVertical="16dp"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/online_course_instructor_profile_image"
                        tools:text="Enroll" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/online_course_ctl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_height_online_course"
                android:contentDescription="@string/app_name"
                app:layout_collapseMode="pin"
                app:tabBackground="@color/white"
                app:tabIndicatorHeight="2dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextAppearance="@style/regular_label"
                app:tabTextColor="@color/primary_text" />

        </com.google.android.material.appbar.AppBarLayout>

        <com.findajob.jobamax.util.NonSwipeableViewPager
            android:id="@+id/vpa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adapter="@{viewPagerAdapter}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


        </com.findajob.jobamax.util.NonSwipeableViewPager>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>



