<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#E9F2FB"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_back_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back_arrow_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/iv_back_button"
                    android:fontFamily="@font/opensans_bold"
                    android:text="My Skills"
                    android:textColor="#7800EF"
                    android:textSize="20dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/default_user_img" />
            </RelativeLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/opensans_bold"
                android:text="My Skills"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/tv_ddd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/opensans_bold"
                    android:text="hard skills"
                    android:textColor="#7800EF"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/tv_ddd"
                    android:src="@drawable/add_icon" />

                <TextView
                    android:id="@+id/tv_titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_toRightOf="@+id/iv_add"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Add"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_seek_bar_layoudt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tv_titley"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Photoshop"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />
                <SeekBar
                    android:id="@+id/seekBars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="6dp"
                    android:progress="8"
                    android:layout_toRightOf="@+id/tv_titley"
                    android:progressDrawable="@drawable/seek_style"
                    android:thumb="@drawable/seek"
                    tools:progress="50" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_seek_bar_layouxt"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tv_titlev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Photoshop"
                    android:textSize="18sp"
                    android:textColor="@color/gray" />
                <SeekBar
                    android:id="@+id/seekBadr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="6dp"
                    android:progress="8"
                    android:layout_toRightOf="@+id/tv_titlev"
                    android:progressDrawable="@drawable/seek_style"
                    android:thumb="@drawable/seek"
                    tools:progress="50" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_seek_bar_layoxut"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tv_titlxe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Photoshop"
                    android:textSize="18sp"
                    android:textColor="@color/gray" />
                <SeekBar
                    android:id="@+id/seekBard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="6dp"
                    android:progress="8"
                    android:layout_toRightOf="@+id/tv_titlxe"
                    android:progressDrawable="@drawable/seek_style"
                    android:thumb="@drawable/seek"
                    tools:progress="50" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_seek_bar_layovut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tv_titlehb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Photoshop"
                    android:textSize="18sp"
                    android:textColor="@color/gray" />
                <SeekBar
                    android:id="@+id/seekBvard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="6dp"
                    android:progress="8"
                    android:layout_toRightOf="@+id/tv_titlehb"
                    android:progressDrawable="@drawable/seek_style"
                    android:thumb="@drawable/seek"
                    tools:progress="50" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_seek_bar_layocut"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tv_titdle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Photoshop"
                    android:textSize="18sp"
                    android:textColor="@color/gray" />
                <SeekBar
                    android:id="@+id/seekBsar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="6dp"
                    android:progress="8"
                    android:layout_toRightOf="@+id/tv_titdle"
                    android:progressDrawable="@drawable/seek_style"
                    android:thumb="@drawable/seek"
                    tools:progress="50" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_seek_bar_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:text="Photoshop"/>
                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="6dp"
                    android:progress="8"
                    android:layout_toRightOf="@+id/tv_title"
                    android:progressDrawable="@drawable/seek_style"
                    android:thumb="@drawable/seek"
                    tools:progress="50" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/tv_dddd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Soft skills"
                    android:textColor="#7800EF"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/iv_adgd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/tv_dddd"
                    android:src="@drawable/add_icon" />

                <TextView
                    android:id="@+id/tv_titlers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_toRightOf="@+id/iv_adgd"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Add"
                    android:textColor="@color/gray"
                    android:textSize="18sp" />

            </RelativeLayout>


            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCpp"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C++" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipJava"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAVA" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPython"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python" />

            </com.google.android.material.chip.ChipGroup>

             <Button
                 android:id="@+id/button3"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:layout_marginBottom="30dp"
                 android:background="@drawable/bg_gradient_rounded"
                 android:paddingStart="20dp"
                 android:paddingEnd="20dp"
                 android:layout_marginTop="30dp"
                 android:text="Save Information"
                 android:textAllCaps="false"
                 android:textColor="@color/white"
                 android:textSize="18dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>