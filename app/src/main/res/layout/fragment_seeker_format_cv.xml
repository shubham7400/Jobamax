<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".jobseeker.profile.SeekerFormatCvFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout16"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_arrow_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_setting"
                app:layout_constraintStart_toEndOf="@+id/iv_back_button">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_modify_cv"
                    style="@style/button_gradient_rect10"
                    android:layout_width="130dp"
                    android:background="@drawable/rounded_blue_border_white_box_10"
                    android:layout_height="35dp"
                    android:paddingStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorPrimary"
                    android:text="contenu"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tv_final"
                    style="@style/button_gradient_rect10"
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                     android:paddingStart="10dp"
                    android:text="format CV"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_setting_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
           style="@style/v_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout16" />


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:scrollbars="none"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <LinearLayout
                android:paddingBottom="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_theme"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_yellow"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/ic_theme" />

                    <LinearLayout
                        android:id="@+id/ll_theme_icon_salmon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/iv_theme_icon_salmon"
                            android:layout_margin="1dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_theme_icon_salmon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_theme_icon_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/iv_theme_icon_blue"
                            android:layout_margin="1dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_theme_icon_blue" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_theme_icon_aquamarine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/iv_theme_icon_aquamarine"
                            android:layout_margin="1dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_theme_icon_aquamarine" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_theme_icon_light_salmoe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/iv_theme_icon_light_salmon"
                            android:layout_margin="1dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_theme_icon_light_salmon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_theme_icon_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/iv_theme_icon_green"
                            android:layout_margin="1dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_theme_icon_green" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_theme_icon_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/iv_theme_icon_yellow"
                            android:layout_margin="1dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_theme_icon_yellow" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_theme_icon_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/iv_theme_icon_red"
                            android:layout_margin="1dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_theme_icon_red" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_theme_icon_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/iv_theme_icon_grey"
                            android:layout_margin="1dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/ic_theme_icon_grey" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/iv_theme_icon_normal"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/ic_theme_icon_normal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_theme_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/title_regular"
                    android:paddingHorizontal="20dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout22"
                    android:textSize="12sp"
                    android:text="Change lâ€™ordre des blocs en les faisant glisser ! :)"/>


                <LinearLayout
                    android:id="@+id/ll_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>