<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.findajob.jobamax.jobseeker.profile.cv.education.CreateEducationHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F7"
        android:orientation="vertical">

        <!-- App bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_action_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back_button"
                android:layout_width="wrap_content"
                android:layout_height="18sp"
                android:layout_margin="8sp"
                android:contentDescription="@string/go_back"
                android:onClick="@{()-> handler.onBackButtonClicked()}"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/lite_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/education"
                android:textColor="#0975FE"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cl_action_bar">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/job_offer_heading"
                        android:layout_marginTop="24dp"
                        android:text="@string/school_name" />

                    <EditText
                        android:id="@+id/schoolNameField"
                        style="@style/job_offer_field"
                        android:background="@drawable/bg_sligthly_rounded_edit_text"
                        android:backgroundTint="@color/white"
                        android:hint="@string/enter_school_name"
                        android:inputType="textCapWords" />

                    <TextView
                        style="@style/job_offer_heading"
                        android:layout_marginTop="24dp"
                        android:text="@string/program_name" />

                    <EditText
                        android:id="@+id/programNameField"
                        style="@style/job_offer_field"
                        android:background="@drawable/bg_sligthly_rounded_edit_text"
                        android:backgroundTint="@color/white"
                        android:hint="@string/enter_program"
                        android:inputType="textCapWords" />

                    <TextView
                        style="@style/job_offer_heading"
                        android:layout_marginTop="24dp"
                        android:text="@string/gpa" />

                    <EditText
                        android:id="@+id/tv_gpa"
                        style="@style/job_offer_field"
                        android:background="@drawable/bg_sligthly_rounded_edit_text"
                        android:backgroundTint="@color/white"
                        android:hint="@string/hint_gpa"
                        android:inputType="numberDecimal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/job_offer_heading"
                                android:text="@string/start_date" />

                            <TextView
                                android:id="@+id/educationStartDateField"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="16dp"
                                android:gravity="center_vertical"
                                android:onClick="@{(v) -> handler.onDateClicked(v, 1)}"
                                android:text="@string/click_to_add"
                                android:textColor="@color/lite_blue"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/job_offer_heading"
                                android:text="@string/end_date" />

                            <TextView
                                android:id="@+id/educationEndDateField"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="16dp"
                                android:gravity="center_vertical"
                                android:onClick="@{(v) -> handler.onDateClicked(v, 2)}"
                                android:text="@string/click_to_add"
                                android:textColor="@color/lite_blue"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48dp"
                        android:background="@drawable/bg_round_button_blue"
                        android:onClick="@{() -> handler.onAddEducationClicked()}"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>