<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.findajob.jobamax.data.pojo.UpcomingEvents" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:backgroundTint="@android:color/transparent"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:backgroundTint="@android:color/transparent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_upcoming_events_iv_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:adjustViewBounds="true"
                loadImageFromDrawable="@{item.image}"
                app:layout_constraintDimensionRatio="W,2:3"
                android:scaleType="fitXY"
                android:tint="@color/trans_black_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_dummy_course_01" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="November 22, 2020"
                android:layout_margin="8dp"
                android:background="@drawable/bg_button_gradient"
                android:textSize="10sp"
                android:paddingVertical="2dp"
                android:paddingHorizontal="6dp"
                android:text="@{item.date}"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="@id/item_upcoming_events_iv_thumbnail"
                app:layout_constraintBottom_toBottomOf="@id/item_upcoming_events_iv_thumbnail"
                tools:ignore="SmallSp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic__play_white"
                app:layout_constraintBottom_toBottomOf="@id/item_upcoming_events_iv_thumbnail"
                app:layout_constraintLeft_toLeftOf="@id/item_upcoming_events_iv_thumbnail"
                app:layout_constraintRight_toRightOf="@id/item_upcoming_events_iv_thumbnail"
                app:layout_constraintTop_toTopOf="@id/item_upcoming_events_iv_thumbnail" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorLightGray"
                app:layout_constraintTop_toBottomOf="@+id/item_upcoming_events_iv_thumbnail">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_upcoming_events_tv_name"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{item.event}"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="8dp"
                    android:textSize="20sp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Lorem"
                    tools:textColor="@android:color/black" />

                <View
                    style="@style/v_divider"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintTop_toBottomOf="@id/item_upcoming_events_tv_name"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_upcoming_events_tv_description"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{item.description}"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="8dp"
                    android:paddingBottom="6dp"
                    android:textSize="16sp"
                    android:gravity="start"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_upcoming_events_tv_name"
                    tools:text="Lorem Ipsum lorem lorem"
                    tools:textColor="@android:color/black" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>