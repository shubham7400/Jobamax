<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.findajob.jobamax.data.pojo.CurrentOnline" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_current_online_cv_online"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="8sp"
        android:layout_marginVertical="4dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#F2EEFE"
        app:cardCornerRadius="8sp"
        app:cardElevation="0.5sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_current_online_iv_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginVertical="12dp"
                android:layout_marginStart="12dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/item_current_online_iv_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                    loadImageFromUrlCircular="@{item.profilePicUrl}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription"
                    tools:src="@tools:sample/avatars" />

            </androidx.cardview.widget.CardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_current_online_iv_name"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="18dp"
                android:layout_marginStart="16dp"
                android:maxLines="1"
                android:text="@{@string/full_name(item.name,item.lastName)}"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_current_online_iv_avatar"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Lorem"
                tools:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/ivSourcedMatched"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginEnd="20sp"
                android:src="@drawable/ic_messenger_chat"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>