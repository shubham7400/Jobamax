<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import
            alias="StringExtensions"
            type="com.findajob.jobamax.extensions.StringKt" />

        <variable
            name="offer"
            type="com.findajob.jobamax.model.JobOffer" />

        <variable
            name="jobsource"
            type="int" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivGradCurveBackground"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:scaleType="fitXY"
            android:src="@drawable/img_bottom_curve_background"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

            <ImageView
                android:id="@+id/jobamax_logo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo_jobamax" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/jobamax_logo"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="92dp"
            android:orientation="vertical"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbarSize="0dp">

                    <LinearLayout
                        android:id="@+id/parentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="24dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/companyCard"
                                android:layout_width="108dp"
                                android:layout_height="108dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="24dp"
                                app:cardCornerRadius="54dp"
                                app:cardElevation="0dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="92dp"
                                    android:layout_height="92dp"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="46dp"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:id="@+id/companyIcon"
                                        android:layout_width="match_parent"
                                        android:layout_height="99dp"
                                        android:scaleType="centerCrop" />
                                </androidx.cardview.widget.CardView>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/companyName"
                                style="@style/regular_label"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="32dp"
                                android:layout_toStartOf="@+id/companyCard"
                                android:maxLines="3"
                                android:text="@{offer.companyName}"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/positionLabel"
                                style="@style/regular_label"
                                android:layout_below="@+id/companyName"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="4dp"
                                android:layout_toStartOf="@+id/companyCard"
                                android:maxLines="3"
                                android:text="@{`Hiring: ` + offer.name}"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="16dp"

                            android:background="@drawable/round_4"
                            android:backgroundTint="@color/heading_background"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                style="@style/regular_heading"
                                android:text="@string/about_job" />

                            <TextView
                                style="@style/regular_multiline_subtext"
                                android:layout_marginTop="4dp"
                                android:text="@{offer.description}"
                                android:textColor="@color/secondary_text" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/round_4"
                            android:backgroundTint="@color/heading_background"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                style="@style/regular_heading"
                                android:text="@string/industry" />

                            <TextView
                                style="@style/regular_multiline_subtext"
                                android:layout_marginTop="4dp"
                                android:text="@{offer.industry}"
                                android:textColor="@color/secondary_text" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/round_4"
                            android:backgroundTint="@color/heading_background"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                style="@style/regular_heading"
                                android:text="@string/type_of_work" />

                            <TextView
                                android:id="@+id/typeOfWorkLabel"
                                style="@style/regular_multiline_subtext"
                                android:layout_marginTop="4dp"
                                android:text="@{StringExtensions.toTitleCase(offer.typeOfWork[0].toString())}"
                                android:textColor="@color/secondary_text" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/round_4"
                            android:backgroundTint="@color/heading_background"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                style="@style/regular_heading"
                                android:text="@string/monthly_salary" />

                            <TextView
                                style="@style/regular_multiline_subtext"
                                android:layout_marginTop="4dp"
                                android:text="@{offer.monthlySalary}"
                                android:textColor="@color/secondary_text" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/round_4"
                            android:backgroundTint="@color/heading_background"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                style="@style/regular_heading"
                                android:text="@string/level_of_hierarchy" />

                            <TextView
                                style="@style/regular_multiline_subtext"
                                android:layout_marginTop="4dp"
                                android:text="@{StringExtensions.toTitleCase(offer.levelOfHierarchy)}"
                                android:textColor="@color/secondary_text" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/round_4"
                            android:backgroundTint="@color/heading_background"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                style="@style/regular_heading"
                                android:text="@string/key_skills_needed" />

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/keySkillChipGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="8dp"
                                app:chipSpacing="8dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/benefitsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/round_4"
                            android:backgroundTint="@color/heading_background"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                style="@style/regular_heading"
                                android:text="@string/benefits_offered" />


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/benefitsRecycler"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:overScrollMode="never" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/companyVideoLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/round_4"
                            android:backgroundTint="@color/heading_background"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                style="@style/regular_heading"
                                android:text="@string/video_presentation" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <ProgressBar
                                    android:id="@+id/thumbProgressBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true" />

                                <ImageView
                                    android:id="@+id/videoThumbnailIcon"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:minHeight="128dp"
                                    android:scaleType="centerCrop" />

                                <ImageView
                                    android:id="@+id/playIcon"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_play" />
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>

                </ScrollView>

                <RelativeLayout
                    android:id="@+id/overlayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/overlayLabel"
                        style="@style/regular_label"
                        android:layout_centerInParent="true"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="48sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/scrollToTopCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cardView"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/scrollToTopButton"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:src="@drawable/ic_scroll"
                android:tag="0"
                app:tint="@color/primary_text" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/footerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:id="@+id/rejectButton"
                android:elevation="0dp"
                android:src="@drawable/ic_reject"
                app:backgroundTint="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:id="@+id/chatButton"
                android:elevation="0dp"
                android:src="@drawable/ic_chat"
                app:backgroundTint="@color/white"
                app:tint="#D214FF" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:id="@+id/acceptButton"
                android:elevation="0dp"
                android:src="@drawable/ic_show"
                app:backgroundTint="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</layout>