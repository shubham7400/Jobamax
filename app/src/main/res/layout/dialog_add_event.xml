<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25sp"
    android:background="@drawable/bg_rounded_dialog"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12.5sp"
        android:text="@string/add_new_event"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="38sp"
        android:layout_margin="8sp"
        android:layout_marginHorizontal="25sp"
        android:background="@drawable/bg_rounded_edit_text"
        android:hint="@string/event_name"
        android:paddingHorizontal="12.5sp" />

    <DatePicker
        android:id="@+id/dpDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12.5sp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

    <Button
        android:id="@+id/btnSave"
        style="@style/primary_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="25sp"
        android:layout_marginVertical="8sp"
        android:background="@drawable/bg_button_gradient"
        android:text="@string/save" />

    <TextView
        android:id="@+id/tvSkipButton"
        android:layout_width="match_parent"
        android:layout_height="38sp"
        android:layout_marginBottom="12.5sp"
        android:gravity="center"
        android:text="@string/skip"
        android:textAlignment="center"
        android:textSize="17sp" />

</LinearLayout>