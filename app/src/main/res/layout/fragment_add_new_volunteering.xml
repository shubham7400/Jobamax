<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".jobseeker.build_profile.AddNewVolunteeringFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/back_arrow_blue"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Bénévolat"
                android:textColor="@color/navi_blue"
                style="@style/title_bold"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="16sp"
                android:text="AJOUTER"
                style="@style/title_regular"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
           style="@style/v_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout16" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:paddingHorizontal="20dp"
            android:fillViewport="true"
            android:isScrollContainer="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">
            <LinearLayout
                android:id="@+id/ll_most_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_bold"
                        android:textColor="@color/navi_blue"
                        android:text="Fonction"
                        android:textSize="20sp"/>
                    <EditText
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/et_job"
                        android:layout_marginTop="10dp"
                        style="@style/edit_text_white_navi_blue_border" />

                    <TextView
                        android:id="@+id/tv2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_job"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_bold"
                        android:textColor="@color/navi_blue"
                        android:text="Nom de l’association"
                        android:textSize="20sp"/>
                    <EditText
                        android:id="@+id/et_organisation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv2"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="10dp"
                        style="@style/edit_text_white_navi_blue_border" />

                    <LinearLayout
                        android:id="@+id/ll1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_organisation"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cb_current_student"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/selector_checkbox_navi_blue"
                            android:button="@android:color/transparent"
                            android:layout_marginEnd="20dp" />

                        <TextView
                            style="@style/title_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/navi_blue"
                            android:text="Actif" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.50"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/title_bold"
                                android:textColor="@color/navi_blue"
                                android:text="Date de début"
                                android:textSize="20sp"/>
                            <TextView
                                android:gravity="center"
                                android:id="@+id/tv_Start_date"
                                android:layout_marginTop="10dp"
                                style="@style/edit_text_white_navi_blue_border" />
                        </LinearLayout>
                        <View
                            android:layout_width="20dp"
                            android:layout_height="1dp"/>
                        <LinearLayout
                            android:id="@+id/ll_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.50"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/title_bold"
                                android:textColor="@color/navi_blue"
                                android:text="Date de fin"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/tv_end_date"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                style="@style/edit_text_white_navi_blue_border" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ll2"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/title_bold"
                        android:textColor="@color/navi_blue"
                        android:text="Résumé des tâches"
                        android:textSize="20sp"/>


                    <LinearLayout
                        style="@style/edit_text_white_navi_blue_border"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/et_description"
                            android:layout_width="match_parent"
                            android:background="@color/transparent"
                            android:layout_height="120dp"
                            android:maxLength="1500"
                            android:layout_marginTop="10dp"
                            android:gravity="top" />

                        <TextView
                            android:id="@+id/tv_description"
                            android:layout_gravity="end"
                            style="@style/title_regular"
                            android:textSize="16sp"
                            android:hint="0/1500"
                            android:textColorHint="@color/navi_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"/>
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_company_suggestions"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:background="@drawable/rounded_white_box"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_organisation" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
         </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>