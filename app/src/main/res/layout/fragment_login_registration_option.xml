<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.LoginRegistrationOptionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/background_gradient_bottom_purple_top_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_back_button"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:isScrollContainer="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_back_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/jobamax_logo_white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_linked_in_login"
                    style="@style/button_rounded_white_blue_border"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="20dp"
                    android:gravity="start|center_vertical"
                    android:drawableStart="@drawable/layer_list_linked_in"
                    android:paddingHorizontal="10dp"
                    android:text="CONTINUER AVEC LINKEDIN" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_google_login"
                    style="@style/button_rounded_white_blue_border"
                    android:layout_marginBottom="40dp"
                    android:drawablePadding="20dp"
                    android:gravity="start|center_vertical"
                    android:drawableStart="@drawable/logo_gmail"
                    android:paddingHorizontal="10dp"
                    android:text="CONTINUER AVEC GMAIL" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="0.50"
                        android:background="@color/white" />

                    <TextView
                        style="@style/title_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:text="OU"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="0.50"
                        android:background="@color/white" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_create_account"
                    style="@style/button_rounded_white_blue_border"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_white_border_50"
                    android:text="CRÃ‰ER MON COMPTE"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_connect_me"
                    style="@style/button_rounded_white_blue_border"
                    android:background="@drawable/rounded_white_border_50"
                    android:text="ME CONNECTER"
                    android:textColor="@color/white" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>