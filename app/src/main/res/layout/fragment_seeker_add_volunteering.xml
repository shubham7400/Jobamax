<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".jobseeker.profile.SeekerAddVolunteeringFragment">

    <data>
        <variable
            name="jobSeeker"
            type="com.findajob.jobamax.model.JobSeeker" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#E9F2FB"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_back_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back_arrow_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/iv_back_button"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Add Volunteering"
                    android:textColor="@color/blue_2"
                    android:textSize="20dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    loadImageFromUrl="@{jobSeeker.profilePicUrl}"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/default_user_img" />
            </RelativeLayout>
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="800dp">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="Activity*"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/et_activity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_white_box"
                        android:hint="Enter Job"
                        android:paddingStart="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView16"
                        tools:layout_editor_absoluteX="0dp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="Orgnization*"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/et_activity"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <EditText
                        android:id="@+id/et_organisation"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Enter Company"
                        android:paddingStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_white_box"
                        app:layout_constraintTop_toBottomOf="@+id/textView19"
                        tools:layout_editor_absoluteX="0dp" />


                    <RelativeLayout
                        android:layout_marginTop="30dp"
                        android:id="@+id/relativeLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/et_organisation">

                        <TextView
                            android:id="@+id/textView139"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Location"

                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <androidx.fragment.app.FragmentContainerView
                            android:id="@+id/autocomplete_fragment"
                            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_select_location"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/opensans_regular"
                            android:hint="Click to add location"
                            android:textColor="@color/colorHypeLink"
                            android:textColorHint="@color/colorHypeLink"
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <CheckBox
                        android:id="@+id/cb_current_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:buttonTint="@color/colorHypeLink"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center_vertical"
                        android:onClick="onCheckboxClicked"
                        android:text="Current Student"
                        android:textColor="@color/gray"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4" />


                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/cb_current_student">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.50">

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/opensans_bold"
                                android:text="Start date"
                                android:textColor="@color/gray"
                                android:textSize="18sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_Start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Select date"
                                android:layout_marginTop="10dp"
                                android:textSize="16sp"
                                android:textColorHint="@color/colorHypeLink"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView15" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                            android:layout_width="10dp"
                            android:layout_height="match_parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.50">

                            <TextView
                                android:id="@+id/textView144"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/opensans_bold"
                                android:text="End date"
                                android:textColor="@color/gray"
                                android:textSize="18sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Select date"
                                android:layout_marginTop="10dp"
                                android:textSize="16sp"
                                android:textColorHint="@color/colorHypeLink"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView144" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/textViewdd19"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="Description"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


                    <EditText
                        android:id="@+id/et_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="120dp"
                        android:gravity="top"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_white_box"
                        android:hint="Enter Description"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/textViewdd19"
                        tools:layout_editor_absoluteX="0dp" />

                    <Button
                        android:id="@+id/btn_add_volunteering"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_gradient_rounded"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_description" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>