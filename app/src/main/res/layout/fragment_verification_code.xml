<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		
		<variable
			name="handler"
			type="com.findajob.jobamax.login.VerificationCodeInterface" />
	</data>
	
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		tools:context=".login.VerificationCodeFragment">
		
		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					
					<ImageView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_alignBottom="@+id/headerLayout"
						android:layout_marginBottom="20dp"
						android:adjustViewBounds="true"
						android:scaleType="fitXY"
						android:src="@drawable/bg_gradient_curve" />
					
					<LinearLayout
						android:id="@+id/headerLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_alignParentTop="true"
						android:gravity="center_horizontal"
						android:orientation="vertical">
						
						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="24dp">
							
							<ImageView
								android:layout_width="48dp"
								android:layout_height="48dp"
								android:onClick="@{() -> handler.onBackButtonClicked()}"
								android:padding="4dp"
								android:src="@drawable/ic_arrow_left"
								app:tint="@color/white" />
							
							<TextView
								style="@style/regular_label"
								android:layout_centerHorizontal="true"
								android:layout_centerVertical="true"
								android:text="@string/verify"
								android:textColor="@color/white"
								android:textSize="24sp"
								android:textStyle="bold" />
						
						</RelativeLayout>
						
						<TextView
							style="@style/regular_label"
							android:layout_marginTop="48dp"
							android:text="@string/enter_verification_code"
							android:textColor="@color/white"
							android:textSize="24sp" />
						
						<TextView
							android:id="@+id/enterVerificationCodeLabel"
							style="@style/regular_multiline_label"
							android:layout_marginLeft="24dp"
							android:layout_marginTop="40dp"
							android:layout_marginRight="24dp"
							android:gravity="center_horizontal"
							android:text="@string/please_enter_the_verification_code_sent_to"
							android:textColor="@color/white" />
						
						<com.mukesh.OtpView
							android:id="@+id/otpView"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="40dp"
							android:inputType="number"
							android:itemBackground="@color/colorPrimary"
							android:textColor="@android:color/white"
							app:OtpItemCount="6"
							app:OtpItemHeight="56dp"
							app:OtpItemRadius="4dp"
							app:OtpLineColor="@color/colorPrimary"
							app:OtpViewType="rectangle" />
						
						<TextView
							style="@style/regular_multiline_label"
							android:layout_marginTop="40dp"
							android:gravity="center_horizontal"
							android:text="@string/didn_t_get_the_code_resend"
							android:textColor="@color/white" />
						
						<Button
							android:id="@+id/sendButton"
							android:layout_width="match_parent"
							android:layout_height="48dp"
							android:layout_marginLeft="64dp"
							android:layout_marginTop="48dp"
							android:layout_marginRight="64dp"
							android:layout_marginBottom="8dp"
							android:background="@drawable/round_32"
							android:backgroundTint="@color/colorAccent"
							android:onClick="@{() -> handler.onSendClicked()}"
							android:text="@string/send"
							android:textAllCaps="false"
							android:textColor="@color/white"
							android:textSize="18sp" />
					
					</LinearLayout>
				
				</RelativeLayout>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					
					<ImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginStart="48dp"
						android:layout_marginTop="32dp"
						android:layout_marginEnd="48dp"
						android:layout_marginBottom="32dp"
						android:adjustViewBounds="true"
						android:src="@drawable/otp_infograph" />
				
				</LinearLayout>
			
			</LinearLayout>
		</ScrollView>
	</FrameLayout>

</layout>