<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.findajob.jobamax.recruiter.profile.jobOffer.show.ShowAllJobOfferController" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F7">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_app_bar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#F2F2F7"
            android:elevation="0sp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8sp"
                    android:contentDescription="@string/go_back"
                    android:onClick="@{()->handler.onBackButtonClicked()}"
                    android:src="@drawable/ic_arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:gravity="center"
                    android:text="@string/job_listings"
                    android:textColor="#1E88E5"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_add_job_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/add_a_job_offer"
                    android:onClick="@{() -> handler.onCreateButtonClicked()}"
                    android:src="@drawable/ic_add_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_archived_job_offer"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/lite_blue" />

                <ImageView
                    android:id="@+id/iv_archived_job_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/go_to_archived_messages"
                    android:onClick="@{()-> handler.onArchivedToggleClicked()}"
                    android:src="@drawable/ic_eye_off"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    app:tint="@color/lite_blue" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_main_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24sp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0sp"
            app:layout_constraintBottom_toTopOf="@id/btn_add_job_offer"
            app:layout_constraintTop_toBottomOf="@id/abl_app_bar"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_job_offer_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20sp"
                    android:layout_marginVertical="6sp"
                    android:text="@string/active_job_offers"
                    android:textColor="@color/lite_blue"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/rv_active_job_offers"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/vHorizontalLine"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4sp"
                    android:background="#F2F2F7"
                    app:layout_constraintTop_toBottomOf="@id/tv_job_offer_label" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_active_job_offers"
                    android:layout_width="match_parent"
                    android:layout_height="380sp"
                    android:overScrollMode="never"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_job_offer_label"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_job_offer" />

                <TextView
                    android:id="@+id/noOffersLabel"
                    style="@style/regular_label"
                    android:layout_gravity="center_horizontal"
                    android:padding="24dp"
                    android:text="@string/no_offers_found"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_job_offer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="24sp"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_round_button_blue"
            android:backgroundTint="@color/lite_blue"
            android:elevation="0sp"
            android:onClick="@{() -> handler.onCreateButtonClicked()}"
            android:text="@string/add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cv_main_body"
            tools:layout_editor_absoluteX="24dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_archived_job_offers"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginHorizontal="24sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="18sp"
            android:background="#0975FE"
            android:backgroundTint="@color/lite_blue"
            android:elevation="0sp"
            android:onClick="@{()-> handler.onArchivedToggleClicked()}"
            android:text="@string/archived"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_add_job_offer"
            app:layout_constraintVertical_bias="1" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>