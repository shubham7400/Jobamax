            android:id="@+id/action_recruiterProfileFragment_to_recruiterCurrentSubscriptionFragment"
            app:destination="@id/recruiterCurrentSubscriptionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />


    </fragment>

    <fragment
        android:id="@+id/recruiterCurrentSubscriptionFragment"
        android:name="com.findajob.jobamax.recruiter.profile.currentSubscription.CurrentSubscriptionFragment"
        android:label="CurrentSubscriptionFragment"
        tools:layout="@layout/fragment_recruiter_current_subscription">

    </fragment>

    <fragment
        android:id="@+id/recruiterMessagesFragment"
        android:name="com.findajob.jobamax.dashboard.messages.MessagesFragment"
        android:label="RecruiterMessagesFragment"
        tools:layout="@layout/fragment_messages" />
    <fragment
        android:id="@+id/recruiterSourceFragment"
        android:name="com.findajob.jobamax.recruiter.track.RecruiterSourceFragment"
        android:label="RecruiterSourceFragment"
