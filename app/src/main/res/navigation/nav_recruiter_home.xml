        tools:layout="@layout/fragment_view_job_offer">
        <action
            android:id="@+id/action_viewJobOfferFragment_to_createJobOfferFragment"
            app:destination="@id/createJobOfferFragment" />
    </fragment>
    <fragment
        android:id="@+id/createJobOfferFragment"
        android:name="com.findajob.jobamax.recruiter.profile.jobOffer.create.JobOfferDetailsFragment"
