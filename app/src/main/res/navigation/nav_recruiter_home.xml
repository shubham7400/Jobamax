        tools:layout="@layout/fragment_job_offer_details">
        <action
            android:id="@+id/action_create_job_offer_to_view_job_offer"
            app:destination="@id/viewJobOfferFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/showAllJobOfferFragment"
            app:popUpToInclusive="false" />

        <argument
            android:name="arg_location"
            android:defaultValue="" />
    </fragment>

