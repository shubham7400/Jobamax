            android:id="@+id/action_showAllJobOfferFragment_to_createJobOfferFragment2"
            app:destination="@id/createJobOfferFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/viewJobOfferFragment"
        android:name="com.findajob.jobamax.recruiter.profile.jobOffer.view.ViewJobOfferFragment"
