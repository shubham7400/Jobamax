<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_new_login"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.findajob.jobamax.login.newloginflow.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_newLoginSelectRoleFragment"
            app:destination="@id/newLoginSelectRoleFragment"
            app:enterAnim="@anim/enter_anim"
            app:exitAnim="@anim/exit_anim"
            app:popEnterAnim="@anim/pop_enter_anim"
            app:popExitAnim="@anim/pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/confirm1SeekerFragment"
        android:name="com.findajob.jobamax.login.newloginflow.Confirm1SeekerFragment"
        android:label="fragment_confirm1_seeker"
        tools:layout="@layout/fragment_confirm1_seeker" >
        <action
            android:id="@+id/action_confirm1SeekerFragment_to_welcomeAsSeekerFragment"
            app:destination="@id/welcomeAsSeekerFragment"
            />
        <action
            android:id="@+id/action_confirm1SeekerFragment_to_confirm2SeekerFragment"
            app:destination="@id/confirm2SeekerFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/confirm2SeekerFragment"
        android:name="com.findajob.jobamax.login.newloginflow.Confirm2SeekerFragment"
        android:label="fragment_confirm2_seeker"
        tools:layout="@layout/fragment_confirm2_seeker" >
        <action
            android:id="@+id/action_confirm2SeekerFragment_to_welcomeAsSeekerFragment"
            app:destination="@id/welcomeAsSeekerFragment" />
        <action
            android:id="@+id/action_confirm2SeekerFragment_to_noReactionDropEmailFragment"
            app:destination="@id/noReactionDropEmailFragment" />
    </fragment>
    <fragment
        android:id="@+id/confirmRecruiterFragment"
        android:name="com.findajob.jobamax.login.newloginflow.ConfirmRecruiterFragment"
        android:label="fragment_confirm_recruiter"
        tools:layout="@layout/fragment_confirm_recruiter" >
        <action
            android:id="@+id/action_confirmRecruiterFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_confirmRecruiterFragment_to_confirm3SeekerFragment"
            app:destination="@id/confirm3SeekerFragment" />
    </fragment>
    <fragment
        android:id="@+id/newLoginSelectRoleFragment"
        android:name="com.findajob.jobamax.login.newloginflow.NewLoginSelectRoleFragment"
        android:label="fragment_select_role2"
        tools:layout="@layout/fragment_new_login_select_role" >
        <action
            android:id="@+id/action_newLoginSelectRoleFragment_to_confirm1SeekerFragment"
            app:destination="@id/confirm1SeekerFragment" />
        <action
            android:id="@+id/action_newLoginSelectRoleFragment_to_confirmRecruiterFragment"
            app:destination="@id/confirmRecruiterFragment" />
    </fragment>
    <fragment
        android:id="@+id/noReactionFragment"
        android:name="com.findajob.jobamax.login.newloginflow.NoReactionFragment"
        android:label="fragment_no_reaction"
        tools:layout="@layout/fragment_no_reaction" />
    <fragment
        android:id="@+id/noReactionDropEmailFragment"
        android:name="com.findajob.jobamax.login.newloginflow.NoReactionDropEmailFragment"
        android:label="fragment_no_reaction_drop_email"
        tools:layout="@layout/fragment_no_reaction_drop_email" />
    <fragment
        android:id="@+id/confirm3SeekerFragment"
        android:name="com.findajob.jobamax.login.newloginflow.Confirm3SeekerFragment"
        android:label="fragment_confirm3_seeker"
        tools:layout="@layout/fragment_confirm3_seeker" >
        <action
            android:id="@+id/action_confirm3SeekerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_confirm3SeekerFragment_to_noReactionFragment"
            app:destination="@id/noReactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeAsSeekerFragment"
        android:name="com.findajob.jobamax.login.newloginflow.WelcomeAsSeekerFragment"
        android:label="fragment_welcome_as_seeker"
        tools:layout="@layout/fragment_welcome_as_seeker" >
        <action
            android:id="@+id/action_welcomeAsSeekerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.findajob.jobamax.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.findajob.jobamax.login.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />




    <fragment
        android:id="@+id/valuePrivacyFragment"
        android:name="com.findajob.jobamax.login.ValuePrivacyFragment"
        android:label="ValuePrivacyFragment"
        tools:layout="@layout/fragment_value_privacy" />

    <fragment
        android:id="@+id/keepMePostedFragment"
        android:name="com.findajob.jobamax.login.KeepMePostedFragment"
        android:label="KeepMePostedFragment"
        tools:layout="@layout/fragment_keep_me_posted" />

    <fragment
        android:id="@+id/locationPermissionFragment"
        android:name="com.findajob.jobamax.recruiter.profile.jobOffer.location.LocationPermissionFragment"
        android:label="LocationPermissionFragment"
        tools:layout="@layout/fragment_location_permission">
        <argument
            android:name="arg_action"
            android:defaultValue="" />
        <action
            android:id="@+id/action_locationPermissionFragment_to_meetPeopleNearbyFragment"
            app:destination="@id/meetPeopleNearbyFragment"
            app:enterAnim="@anim/slide_in_bottom"
            app:exitAnim="@anim/slide_out_bottom" />
    </fragment>
    <fragment
        android:id="@+id/meetPeopleNearbyFragment"
        android:name="com.findajob.jobamax.login.MeetPeopleNearbyFragment"
        android:label="MeetPeopleNearbyFragment"
        tools:layout="@layout/fragment_meet_nearby_people">
        <action
            android:id="@+id/action_meetPeopleNearbyFragment_to_locationPermissionFragment"
            app:destination="@id/locationPermissionFragment"
            app:enterAnim="@anim/slide_in_top"
            app:exitAnim="@anim/slide_out_top"
            app:popUpTo="@id/locationPermissionFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>