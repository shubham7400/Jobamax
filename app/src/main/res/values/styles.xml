<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


    <style name="regular_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="regular_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="regular_multiline_label" parent="regular_label">
        <item name="android:maxLines">100</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="regular_multiline_subtext" parent="regular_multiline_label">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="regular_subtext" parent="regular_label">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="account_label" parent="regular_label">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="seeker_account_menu" parent="account_label">
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@android:color/white</item>
    </style>


    <style name="seeker_account_menu.arrow_right">
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
    </style>

    <style name="personal_information_heading_seeker" parent="regular_label">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="personal_information_field" parent="regular_label">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="personal_information_field_seeker" parent="regular_label">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bg_rounded_edit_text</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="job_offer_label" parent="regular_label">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="v_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="account_subheading_seeker" parent="regular_label">
        <item name="android:maxLines">1</item>
        <item name="android:background">@color/screen_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>





    <style name="change_password_heading_recruiter" parent="regular_label">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="change_password_field_recruiter" parent="regular_label">
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/round_16</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="circular_image">
        <item name="civ_border_color">@color/new_purple</item>
        <item name="civ_border_width">2dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="screen_title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title_bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title_regular">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_gradient_rect">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_gradient_rounded</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="button_gradient_rect32">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_gradient_rounded</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

</resources>