<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout8"
        android:tag="layout/item_seeker_tracking_job_detail_card_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:id="@+id/view11"
            android:layout_width="10dp"
            android:layout_height="150dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white_box"
            android:paddingVertical="5dp"
            android:paddingHorizontal="30dp"
            app:layout_constraintEnd_toEndOf="@+id/view11"
            app:layout_constraintStart_toStartOf="@+id/view11"
            app:layout_constraintTop_toBottomOf="@+id/view2e">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="12th Dec"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="added to wishlist"
                android:textColor="@color/new_purple"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view2e"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="-8dp"
            android:background="@drawable/round_32"

            android:backgroundTint="@color/new_purple"
            app:layout_constraintBottom_toBottomOf="@+id/view11"
            app:layout_constraintStart_toStartOf="@+id/view11"
            app:layout_constraintTop_toTopOf="@+id/view11" />

        <ImageView
            android:id="@+id/iv_delete_phase"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/close_background_red"
            android:layout_marginStart="-25dp"
            app:layout_constraintStart_toEndOf="@+id/cardView24"
            app:layout_constraintTop_toTopOf="@+id/cardView24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

         