<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                       
                                                                            

     
                   
                              
                                                            
            


     <androidx.core.widget.NestedScrollView
         android:layout_width="match_parent"
         android:background="#E9F2FB"
         android:layout_height="match_parent" android:tag="layout/fragment_ideal_job_description_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" tools:context=".jobseeker.profile.idealjob.IdealJobDescriptionFragment">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingHorizontal="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="20dp"
                             android:layout_marginBottom="10dp"
                             android:gravity="center_vertical"
                             app:layout_constraintStart_toStartOf="parent"
                             app:layout_constraintTop_toTopOf="parent">

                              <ImageView
                                  android:id="@+id/iv_back_button"
                                  android:layout_width="24dp"
                                  android:layout_height="24dp"
                                  android:layout_centerVertical="true"
                                  android:src="@drawable/back_arrow_blue" />

                              <TextView
                                  style="@style/screen_title"
                                  android:layout_centerInParent="true"
                                  android:text="@string/my_ideal_job" />

                              <de.hdodenhof.circleimageview.CircleImageView
                                  android:id="@+id/civ_user"
                                  style="@style/circular_image"
                                  android:tag="binding_1"                      
                                  android:layout_alignParentEnd="true"
                                  android:src="@drawable/default_user_img"
                                  app:civ_border_color="@color/colorPrimary" />
                         </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_margin="20dp"
                         android:text="@string/text"
                         android:textSize="18sp"
                         app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                         android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tv_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:text="0/240"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
                        app:layout_constraintStart_toEndOf="@+id/tv_title"
                        app:layout_constraintTop_toTopOf="@+id/tv_title" />



                    <EditText
                        android:id="@+id/et_ideal_job_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                         android:background="@drawable/rounded_white_box"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="top"
                        android:minHeight="150dp"
                        android:maxLength="240"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_title" />



               </androidx.constraintlayout.widget.ConstraintLayout>

          </LinearLayout>
     </androidx.core.widget.NestedScrollView>

         